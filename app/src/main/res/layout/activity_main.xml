<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:backgroundTint="@android:color/white">

    <Button
        android:id="@+id/createGroup"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create AP"
        android:backgroundTint="#EBC900"
        android:layout_marginTop="12dp"
        android:layout_marginRight="15dp"/>


    <LinearLayout android:orientation="vertical"
        android:layout_toRightOf="@id/createGroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/customborder">
    <TextView
        android:id="@+id/ssid"
        android:layout_toRightOf="@+id/createGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="SSID:" />
    <TextView
        android:id="@+id/ip"
        android:layout_below="@+id/ssid"
        android:layout_toRightOf="@id/createGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="IP:"/>
    <TextView
        android:id="@+id/pass"
        android:layout_toRightOf="@+id/createGroup"
        android:layout_below="@+id/ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="Passphrase:"/>
    </LinearLayout>
    <Button
        android:id="@+id/autoMode"
        android:layout_toLeftOf="@+id/buttonB"
        android:layout_alignBottom="@+id/buttonB"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mode Auto"
        android:backgroundTint="#EBC900"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="15dp"/>



    <ImageButton
        android:id="@+id/buttonF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@raw/up"
        android:backgroundTint="@android:color/white"
        android:visibility="visible"/>
    <ImageButton
        android:id="@+id/buttonR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/buttonF"
        android:layout_below="@id/buttonF"
        android:text="R"
        android:backgroundTint="@android:color/white"
        android:src="@raw/right"
        android:visibility="visible"/>
    <ImageButton
        android:id="@+id/buttonL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonF"
        android:layout_toLeftOf="@id/buttonF"
        android:src="@raw/left"
        android:backgroundTint="@android:color/white"
        android:visibility="visible"/>
    <ImageButton
        android:id="@+id/buttonB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonL"
        android:layout_alignLeft="@id/buttonF"
        android:src="@raw/down"
        android:backgroundTint="@android:color/white"
        android:visibility="visible"/>
    <ImageButton
        android:id="@+id/buttonS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonF"
        android:layout_alignLeft="@id/buttonF"
        android:src="@raw/pause"
        android:backgroundTint="@android:color/white"
        android:visibility="visible"/>

</RelativeLayout>
